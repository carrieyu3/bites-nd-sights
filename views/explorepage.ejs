<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- <link rel="stylesheet" href="/assets/css/main.css"> -->
    <link rel="stylesheet" href="css/main.css">
    <script src="/js/explore.js"></script>
</head>
<body>
    <header class="header">
        <a href="#" class="title">
            Bites 'nd Sites
            <i class="fa-solid fa-burger"></i>
            <i class="fa-solid fa-city"></i>
        </a>

        <nav class="navbar">
            <div id="button-box">
                <form action="/api/index" method="get">
                    <input type="hidden" name="encryptedEmail" id="encryptedEmailexe" value="">
                    <input type="hidden" name="k" id="kexe" value="">

                    <button class="button" type="submit">Post | </button>
                </form>

                <form action="/api/explore" method="get">
                    <input type="hidden" name="encryptedEmailex" id="encryptedEmailex" value="">
                    <input type="hidden" name="kex" id="kex" value="">

                    <button class="button" type="submit">Explore | </button>
                </form>
                
                <a href="/">Logout</a>

            </div>
            
        </nav>
    </header>

    <div class = "upload-general">
        <% posts.forEach(post => { %>
            <div class = "upload-box">
                <!--displays the output-->
                <p>Name: <span id="outputName"><%= post.placeName %></span></p>
                <p>Location: <span id="outputLocation"><%= post.placeLocation %></span></p>
                <p>Image: <span id="outputImage"><img src="/api/images/<%= post.image %>" alt="Image from <%= post.placeName %>"></span></p>
                <p>Description: <span id="outputDescrip"><%= post.description %></span></p>
                <p>Date: <%= new Date(post.timestamp).toLocaleDateString() %></p>
            </div>
        <% }); %>
        
    </div>


    
</body>
</html>